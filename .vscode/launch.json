  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Mocha",
      "type": "node2",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "${file}",
        "--no-timeouts",
        "--colors"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "name": "Run ES7",
      "type": "node2",
      "request": "launch",
      "program": "${file}",
      "stopOnEntry": false,
      "args": [
        "--no-timeouts",
        "--colors"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing"
      }
    }
  ]
}